{% extends "__layout.twig" %}
{% import  'macro.twig' as macro %}

{% block content %}

<div class="row d-flex">
	{% for object in south_pole_objects %}
	<div class="col-auto  d-flex align-items-stretch">
		<div class="border p-2 flex flex-column justify-content-beetween position-relative" style="margin-bottom: 10px;">
			<div class="position-absolute text-end" style="right: 3px; top: 3px;">
				<form action="/south_pole_objects/{{ object.id }}/edit" method="POST">
					<input type="hidden" name="id">
					<button type="submit" class="btn btn-warning">
						<i class="bi bi-brush"></i>
					</button>
				</form>
				<form action="/south_pole_objects/delete" method="POST">
					<input type="hidden" name="id" value="{{ object.id }}">
					<button type="submit" class="btn btn-danger">
						<i class="bi bi-x"></i>
					</button>
				</form>
			</div>
			<div class="img-thumbnail mb-2" style="width: 100%; height: 200px; overflow: hidden;">
				<img src="{{ object.image }}" style="width: 100%; height: 100%; object-fit: cover;">
			</div>
			<div class="d-flex flex-column">
				<a class="btn btn-primary mb-1" href="/south_pole_objects/{{object.id}}">{{object.title}}</a>
				<div class="d-flex justify-content-center">
					<a class="me-3" href="/south_pole_objects/{{object.id}}?show=image">Картинка</a>
					<a href="/south_pole_objects/{{object.id}}?show=info">Описание</a>				
				</div>
			</div>
		</div>
	</div>
	{% endfor %}
</div>

{% endblock %}
